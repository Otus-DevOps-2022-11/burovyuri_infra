{
  "builders": [
    {
      "type": "yandex",
      "service_account_key_file": "{{user `serviceAccountKeyFile`}}",
      "folder_id": "{{user `folderId`}}",
      "source_image_family": "{{user `sourceId`}}",
      "image_name": "reddit-full-{{timestamp}}",
      "image_family": "reddit-full",
      "ssh_username": "ubuntu",
      "platform_id": "standard-v1",
      "use_ipv4_nat": "true",
      "ssh_private_key_file": "~/.ssh/id_rsa"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./../config-scripts/install_ruby.sh",
      "execute_command": "sudo {{.Path}}"
    },
    {
      "type": "shell",
      "script": "./../config-scripts/install_mongodb.sh",
      "execute_command": "sudo {{.Path}}"
    },
    {
      "type": "shell",
      "script": "./../config-scripts/deploy.sh",
      "execute_command": "sudo {{.Path}}"
    }
  ]
}
